{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && tsc && tsc-alias",
    "start:dev": "nodemon -L src/index.ts",
    "dev": "node dist/index.js",
    "prisma:generate": "prisma generate --schema src/database/prisma/schema.prisma",
    "prisma:migrate:apply": "npx prisma migrate dev --schema src/database/prisma/schema.prisma",
    "prisma:deploy": "prisma migrate deploy --schema src/database/prisma/schema.prisma"
  },
  "prisma": {
    "schema": "src/database/prisma/schema.prisma"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/formbody": "^8.0.2",
    "@fastify/jwt": "^9.1.0",
    "@prisma/client": "^6.8.2",
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.5.0",
    "fastify": "^5.3.3",
    "zod": "^3.24.4",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.15.19",
    "nodemon": "^3.1.10",
    "prisma": "^6.8.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
